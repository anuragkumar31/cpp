
#include <stdio.h>
#include<iostream>
using namespace std;
int main()
{
    int n,f=0;
    cin>>n;
    f=n;
    int r,sum=0;
    
    while(f!=0)
    {
        r=f%10;
        sum=sum*10+r;
        f=f/10;
        
    }
    
    
    
    if(sum==n)
    {
        cout<<"Polidrom as reverse is same as number"<<sum;
    }
    else
    {
        cout<<"not Polidrom"<<sum;
    }
    return 0;
}



logic:-


n=121
n=f

rem=f%10
sum=sum*10+rem
f=f/10


1st:-

rem->121%10=>1
sum=1
f=12

2nd:-

rem=12%10=>2
sum=1*10+2
f=1


3rd:-

rem=1%10=>
sum=12*10+1
f=1/10

sum=121
